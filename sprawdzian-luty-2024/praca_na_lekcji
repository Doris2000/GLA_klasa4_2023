def choinka(a):
    t = 1
    for i in range(a, 0, -1):
        print(" "*(i-1)+"*"*t)
        t+=2
    print(" "*(a-2)+"||")

choinka(8)

wejscie=open("licby.txt", "r")
dane=[]

for i in wejscie:
    dane.append(i.strip())

import re


#Check if the string has any + characters:
ile=0
for i in dane:
    x = re.findall(r"(\d)\1\1", i)
    if (len(x)==1):
        ile+=1
print(ile)
#Wszystkie numery telefonów o tej samej liczbie cyfr tworzą jedną "rodzinę". Podaj liczbę niepustych rodzin numerów telefonów.

dict={}

for i in dane:
    if len(i) not in dict:
        dict[len(i)]=1
    else:
        dict[len(i)]+=1

print(dict)
#15
tab=[i for i in range(1, 16)]
print(tab)

ilosc=0
for klucz, wartosc in dict.items():
    if int(klucz) in tab:
        ilosc+=1

print(ilosc)

